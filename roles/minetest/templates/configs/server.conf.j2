# {{ ansible_managed }}

#
# Engine
#

server_name = Craig's Server
server_description = Well-built, reliable and popular world for new or experienced builders. Come and join us! :)
server_address = minetest.davison.io
server_url = https://davison.io/minetest/craig-server/
server_announce = true
port = 30000
motd = Welcome to Craig's Server! Visit https://davison.io/minetest/craig-server for more information.
max_users = 30
default_privs = shout, fast, zoom, interact
static_spawnpoint = 20136, 32, 20244
disallow_empty_password = true
enable_rollback_recording = true
kick_msg_shutdown = Server shutting down. We'll be back soon.
kick_msg_crash = Server has crashed. Please try rejoining.
ask_reconnect_on_crash = true
name = CraigyDavi

#
# Mods
#

give_initial_stuff = true
initial_stuff = default:pick_steel,default:shovel_steel,default:axe_steel,default:torch 20,default:cobble 99,default:wood 99,default:chest_locked,default:furnace,markers:mark 4,markers:stone,bitchange:bitcoin 25
gloopblocks_lavacooling = false
irc.nick = craig-server
irc.server = chat.freenode.net
irc.channel = #davisonio-minetest
irc.reconnect = 1800
irc.timeout = 15
areas.self_protection = true
areas.self_protection_max_size = 200, 200, 200
areas.self_protection_max_areas = 999999
secure.trusted_mods = irc,sban
armor_drop = false
enable_lavacooling = false
log_mod = true
ranks.prefix_chat = false
moreblocks.stairsplus_in_creative_inventory = false

#
# Secrets
#

{% for setting in minetest_secret_settings %}
{{setting}}
{% endfor %}
