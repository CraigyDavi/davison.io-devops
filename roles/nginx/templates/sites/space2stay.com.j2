# {{ ansible_managed }}

server {
  listen [::]:80;
  listen 80;
  server_name space2stay.com www.space2stay.com;

  include /etc/nginx/include-basic.conf;

  return 301 https://space2stay.com$request_uri;
}

server {
  listen [::]:443 ssl http2;
  listen 443 ssl http2;
  server_name www.space2stay.com;

  include /etc/nginx/include-ssl.conf;
  include /etc/nginx/include-basic.conf;

  ssl on;
  ssl_certificate /etc/letsencrypt/live/space2stay.com/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/space2stay.com/privkey.pem;
  ssl_trusted_certificate /etc/letsencrypt/live/space2stay.com/fullchain.pem;

  return 301 https://space2stay.com$request_uri;
}

server {
  listen [::]:443 ssl http2;
  listen 443 ssl http2;
  server_name space2stay.com;

  root /var/www/space2stay.com;

  include /etc/nginx/include-ssl.conf;
  include /etc/nginx/include-basic.conf;

  ssl on;
  ssl_certificate /etc/letsencrypt/live/space2stay.com/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/space2stay.com/privkey.pem;
  ssl_trusted_certificate /etc/letsencrypt/live/space2stay.com/fullchain.pem;
}
