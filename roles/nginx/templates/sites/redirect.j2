# {{ ansible_managed }}

server {
  listen [::]:80;
  listen 80;
  server_name {{ item.name }} www.{{ item.name }};

  include /etc/nginx/h5bp/include-basic.conf;

  return 301 {{ item.redirect }}$request_uri;
}

server {
  listen [::]:443 ssl http2;
  listen 443 ssl http2;
  server_name {{ item.name }} www.{{ item.name }};

  include /etc/nginx/h5bp/include-basic.conf;
  include /etc/nginx/h5bp/include-ssl.conf;

  ssl_certificate /etc/letsencrypt/live/{{ item.name }}/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/{{ item.name }}/privkey.pem;
  ssl_trusted_certificate /etc/letsencrypt/live/{{ item.name }}/fullchain.pem;

  return 301 {{ item.redirect }}$request_uri;
}
