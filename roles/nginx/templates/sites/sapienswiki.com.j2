# {{ ansible_managed }}

server {
  listen [::]:80;
  listen 80;
  server_name sapienswiki.com www.sapienswiki.com;

  include /etc/nginx/h5bp/include-basic.conf;

  return 301 https://sapienswiki.com$request_uri;
}

server {
  listen [::]:443 ssl http2;
  listen 443 ssl http2;
  server_name www.sapienswiki.com;

  include /etc/nginx/h5bp/include-basic.conf;
  include /etc/nginx/h5bp/include-ssl.conf;

  ssl_certificate /etc/letsencrypt/live/sapienswiki.com/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/sapienswiki.com/privkey.pem;
  ssl_trusted_certificate /etc/letsencrypt/live/sapienswiki.com/fullchain.pem;

  return 301 https://sapienswiki.com$request_uri;
}

server {
  listen [::]:443 ssl http2;
  listen 443 ssl http2;
  server_name sapienswiki.com;

  include /etc/nginx/h5bp/include-basic.conf;
  include /etc/nginx/h5bp/include-ssl.conf;

  root /var/www/sapienswiki.com;
  index index.php;

  ssl_certificate /etc/letsencrypt/live/sapienswiki.com/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/sapienswiki.com/privkey.pem;
  ssl_trusted_certificate /etc/letsencrypt/live/sapienswiki.com/fullchain.pem;

  location / {
    try_files $uri $uri/ @rewrite;
  }

  location @rewrite {
    rewrite ^/(.*)$ /index.php?title=$1&$args;
  }

  location ~ \.php$ {
    fastcgi_pass unix:/var/run/php/php7.2-fpm.sock;
    include /etc/nginx/fastcgi_params;
    include /etc/nginx/fastcgi.conf;
  }
}
